%% Declare theme options
% Option 'hideothersubsections', for suppressing the subsections of the inactive sections in the sidebar
\DeclareOptionBeamer{hideothersubsections}{%
	\PassOptionsToPackage{hideothersubsections}{beamerouterthemesidebar}%
}
% Option 'hideallsubsections', for suppressing all subsections in the sidebar
\DeclareOptionBeamer{hideallsubsections}{%
	\PassOptionsToPackage{hideallsubsections}{beamerouterthemesidebar}%
}
% Option 'school', for including the school name in the logo
\DeclareOptionBeamer{school}{%
	\PassOptionsToPackage{school=#1}{beamerouterthemeAalto-base}%
}
% Option 'institute', for including the institute name in the logo
\DeclareOptionBeamer{institute}{%
	\PassOptionsToPackage{institute=#1}{beamerouterthemeAalto-base}%
}
% Option 'invariant, for keeping a certain logo throughout the entire presentation
\DeclareOptionBeamer{invariant}{%
	\PassOptionsToPackage{invariant}{beamerouterthemeAalto-base}%
}

%% Process the options
\ProcessOptionsBeamer

\mode<presentation>

%% Required fundamental definitions
\RequirePackage{beamerouterthemeAalto-base}

%% Set the outer theme
\useoutertheme[width={2cm},height={0pt}]{sidebar}

%% Set the lengths
% Left margin of the footer
\setlength{\AaltoBeamerFooterMarginLeft}{21.5pt}
% Right margin of the footer
\setlength{\AaltoBeamerFooterMarginRight}{21.5pt}
% Left margin of the text
\setlength{\AaltoBeamerTextMarginLeft}{6.75pt}
% Right margin of the text
\setlength{\AaltoBeamerTextMarginRight}{21.5pt}
% Horizontal offset of the title page
\setlength{\AaltoBeamerTitlePageHOffset}{-2cm}\addtolength{\AaltoBeamerTitlePageHOffset}{14.75pt}

%% Modified Beamer template definitions
% Title page
\setbeamertemplate{title page}{%
	\addtolength{\textwidth}{-\AaltoBeamerTitlePageHOffset}%
	\usebeamertemplate{Aalto title page}%
	\addtolength{\textwidth}{\AaltoBeamerTitlePageHOffset}%
}
% Left sidebar
\setbeamertemplate{sidebar left}{%
	\usebeamertemplate{Aalto sidebar}%
}

\mode<all>
