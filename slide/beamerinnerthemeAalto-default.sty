%% Declare theme options
% Option 'showpartcontents', for showing the automatic display of the table of contents when parts are used
\DeclareOptionBeamer{showpartcontents}{%
	\PassOptionsToPackage{showpartcontents=#1}{beamerinnerthemeAalto-base}%
}
% Option 'hidesubsections', for suppressing the subsections in parts' table of contents
\DeclareOptionBeamer{hidesubsections}{%
	\PassOptionsToPackage{hidesubsections}{beamerinnerthemeAalto-base}%
}

%% Process the options
\ProcessOptionsBeamer

\mode<presentation>

%% Required fundamental definitions
\RequirePackage{beamerinnerthemeAalto-base}

%% Set the lengths
% Set the vertical offset of the frame title
\setlength{\AaltoBeamerFrameTitleVOffset}{13pt}%
% Set the vertical offset of the part title box template
\setlength{\AaltoBeamerPartVOffset}{8pt}%
% Set the horizontal offset of the part title box template
\setlength{\AaltoBeamerPartHOffset}{0pt}%
% Set the vertical offset of the parts' table of contents template
\setlength{\AaltoBeamerPartContentsVOffset}{-12.75pt}%

%% Modified Beamer template definitions
% Automatic advertisement of the current part
\makeatletter
\AtBeginPart{%
	\def\AaltoBeamerUsesParts{1}%
	\addtocontents{toc}{\protect\beamer@partintoc{\the\c@part}{\beamer@partnameshort}{\the\c@page}}%
	\begin{frame}[t,allowframebreaks]%
		\partpage%
		\ifthenelse{\boolean{AaltoBeamerPartContents}}{%
			% Table of Contents of the current part automatically shown
			\clearpage
			\usebeamertemplate{Aalto part contents frametitle}%
			\usebeamertemplate{Aalto part contents}%
		}{%
			% Table of Contents of the current part not shown
		}%
	\end{frame}
}
\makeatother

\mode<all>
