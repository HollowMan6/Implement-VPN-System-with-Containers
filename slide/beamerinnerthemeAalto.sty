%% Declare theme options
% Option 'default', for using the default inner theme
\DeclareOptionBeamer{default}{%
	\gdef\AaltoBeamerInnerTheme{default}%
}
% Option 'sidebar', for using the sidebar inner theme
\DeclareOptionBeamer{sidebar}{%
	\gdef\AaltoBeamerInnerTheme{sidebar}%
}
% Option 'outline', an alias for the option 'sidebar'
\DeclareOptionBeamer{outline}{%
	\gdef\AaltoBeamerInnerTheme{sidebar}%
}
% Option 'showpartcontents', for the default inner theme
\DeclareOptionBeamer{showpartcontents}{%
	\PassOptionsToPackage{showpartcontents=#1}{beamerinnerthemeAalto-default}%
}
% Option 'hidesubsections', for the default inner theme
\DeclareOptionBeamer{hidesubsections}{%
	\PassOptionsToPackage{hidesubsections}{beamerinnerthemeAalto-default}%
}

%% Default options
\ExecuteOptionsBeamer{default}

%% Process the options
\ProcessOptionsBeamer

\mode<presentation>

%% Required for the conditionals
\RequirePackage{ifthen}

%% Set the inner theme
% Default theme
\ifthenelse{\equal{\AaltoBeamerInnerTheme}{default}}{%
	\useinnertheme{Aalto-default}%
}{}
% Sidebar theme
\ifthenelse{\equal{\AaltoBeamerInnerTheme}{sidebar}}{%
	\useinnertheme{Aalto-sidebar}%
}{}

\mode<all>
